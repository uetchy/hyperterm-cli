#!/usr/bin/env node

const program = require('commander')
const hyperterm = require('..')

program
  .option('-f, --force', 'force installation')
  .parse(process.argv)

var pkgs = program.args

if (!pkgs.length) {
  console.error('packages required')
  process.exit(1)
}

config = hyperterm.loadConfig()

pkgs.forEach((pkg) => {
  if (config.plugins.includes(pkg)) {
    return console.log("Allready installed")
  }
  hyperterm.installPlugin(pkg)
})
